@page "/nepalcovidstatus"

@inject CovidStatus Services

@if(status == null)
{
  <div class="d-flex flex-row justify-content-center align-items-center" style="height: 100px;">
    <div class="p-2">
   <div class="spinner-border text-info" role="status">
  <span class="sr-only">Loading...</span>
</div>
    </div>
</div>


}
else
{
<ul class="list-group">
  <li class="list-group-item d-flex justify-content-between align-items-center">
    Tested Postive
    <span class="badge badge-primary badge-pill">@status.tested_positive</span>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    Tested Negative
    <span class="badge badge-primary badge-pill">@status.tested_negative</span>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center">
   Tested
    <span class="badge badge-primary badge-pill">@status.tested_total</span>
  </li>
</ul>
<ul class="list-group">
  <li class="list-group-item d-flex justify-content-between align-items-center">
    In Isolation
    <span class="badge badge-primary badge-pill">@status.in_isolation</span>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center">
   In Quarantined
    <span class="badge badge-primary badge-pill">@status.quarantined</span>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center">
   Tested RDT
    <span class="badge badge-primary badge-pill">@status.tested_rdt</span>
  </li>
</ul>
<ul class="list-group">
  <li class="list-group-item d-flex justify-content-between align-items-center">
    Pending Result
    <span class="badge badge-primary badge-pill">@status.pending_result</span>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center">
   Recovered
    <span class="badge badge-primary badge-pill">@status.recovered</span>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center">
   Death
    <span class="badge badge-primary badge-pill">@status.deaths</span>
  </li>
</ul>

<p>Last Update: @status.updated_at, Source: @status.source</p>
}









@code{
    public NepalCoronaStatus status {get;set;}
    protected override async Task OnInitializedAsync()
    {
        status = await Services.GetNepalCoronaStatusAsync();
    }
}